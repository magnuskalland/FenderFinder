<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blue_background" />

    <TextView
        android:id="@+id/radius_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:theme="@style/h1"
        android:text="@string/radius"

        android:layout_marginTop="@dimen/input_header_margin_top"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/radius_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:theme="@style/p"
        android:text="@string/radius_description"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radius_header" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/radius_text_margin_top"
        android:text="@string/zero_meters"

        android:theme="@style/h1"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radius_description" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="@dimen/seek_bar_width"
        android:layout_height="wrap_content"

        android:layout_marginBottom="@dimen/seek_bar_margin_bottom"
        android:thumbTint="@color/white"
        android:progressTint="@color/white"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>