<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Gruppe10_Main" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_blue</item>
        <item name="colorPrimaryVariant">@color/app_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_blue</item>
        <item name="colorSecondaryVariant">@color/app_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/app_blue</item>
        <!-- Customize your theme here. -->
    </style>


    <!-- Headers -->
    <style name="h1">
        <item name="android:fontFamily">@font/brandon_med</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="h2">
        <item name="android:fontFamily">@font/brandon_med</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="h3">
        <item name="android:fontFamily">@font/brandon_bld</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="p">
        <item name="android:fontFamily">@font/brandon_med</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Picker style -->
    <style name="TimePickerStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/brandon_med</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="DatePickerStyle">
        <item name="colorAccent">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/brandon_med</item>
    </style>

    <!-- ListView style -->
    <style name="ListViewStyle">
        <item name="android:fontFamily">@font/brandon_med</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:listSelector">@color/white</item>
    </style>
    
    <!-- Overview Styles -->
    <style name="ColumnInformation">
        <item name="android:fontFamily">@font/brandon_med</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/app_blue</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="DataInformation">
        <item name="android:fontFamily">@font/brandon_med</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/app_blue</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>